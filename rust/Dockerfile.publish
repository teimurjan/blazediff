FROM rust:1.83-bookworm

WORKDIR /app

RUN apt-get update && apt-get install -y \
    cmake \
    nasm \
    zlib1g-dev \
    && rm -rf /var/lib/apt/lists/*

COPY . .

ARG CRATES_IO_TOKEN
ARG DRY_RUN=false

RUN if [ "$DRY_RUN" = "true" ]; then \
        cargo publish --dry-run; \
    else \
        cargo publish --token "$CRATES_IO_TOKEN"; \
    fi
