{
	"compilerOptions": {
		"target": "esnext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2020"],
		"types": ["node"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": false,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["src/**/*", "fixtures/**/*"],
	"exclude": ["node_modules", "dist"]
}
