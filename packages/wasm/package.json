{
	"name": "@blazediff/wasm",
	"version": "1.1.0",
	"description": "AssemblyScript implementation of pixelmatch with SIMD optimization",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"build/*.js",
		"build/*.wasm",
		"build/*.d.ts"
	],
	"scripts": {
		"build:wasm": "asc src/core.ts --target release --bindings esm --exportRuntime  --optimize",
		"build:wasm:debug": "asc src/core.ts --target debug --bindings esm --exportRuntime",
		"build:ts": "tsup --tsconfig ./tsconfig.build.json",
		"build": "pnpm build:wasm && pnpm build:ts",
		"dev": "tsup --watch",
		"clean": "rm -rf dist"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"assemblyscript": "^0.28.8",
		"tsup": "8.5.0",
		"typescript": "5.9.2"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		},
		"./wasm": {
			"import": "./build/release.js",
			"types": "./build/release.d.ts"
		}
	}
}
