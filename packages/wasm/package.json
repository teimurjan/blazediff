{
	"name": "@blazediff/wasm",
	"version": "1.1.0",
	"description": "Rust WASM implementation of blazediff",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"pkg"
	],
	"scripts": {
		"prebuild": "pnpm clean",
		"build": "pnpm build:wasm && pnpm build:ts",
		"build:wasm:pack": "cross-env RUSTFLAGS='-C target-feature=+simd128,+bulk-memory,+sign-ext' wasm-pack build --target nodejs --out-dir pkg --release --no-opt",
		"build:wasm:opt": "wasm-opt pkg/*_bg.wasm -O2 --enable-simd --enable-bulk-memory-opt --enable-sign-ext --enable-nontrapping-float-to-int  -o pkg/*_bg.wasm",
		"build:wasm:validate": "wasm-tools validate pkg/*_bg.wasm --features simd,bulk-memory,saturating-float-to-int",
		"build:wasm": "pnpm build:wasm:pack && pnpm build:wasm:opt && pnpm build:wasm:validate",
		"build:ts": "tsup",
		"clean": "rimraf pkg target dist"
	},
	"keywords": [
		"image",
		"diff",
		"compare",
		"wasm",
		"rust"
	],
	"license": "MIT",
	"devDependencies": {
		"cross-env": "10.0.0",
		"rimraf": "6.0.1",
		"tsup": "8.5.0",
		"typescript": "5.9.2"
	}
}
