{
	"targets": {
		"debug": {
			"outFile": "build/debug.wasm",
			"textFile": "build/debug.wat",
			"sourceMap": true,
			"debug": true
		},
		"release": {
			"outFile": "build/release.wasm",
			"textFile": "build/release.wat",
			"sourceMap": false,
			"optimizeLevel": 3,
			"shrinkLevel": 2,
			"converge": true,
			"noAssert": true,
			"enable": ["simd", "bulk-memory", "sign-extension", "nontrapping-f2i", "relaxed-simd"],
			"disable": ["mutable-globals"],
			"uncheckedBehavior": "always",
			"trapMode": "allow",
			"exportRuntime": true,
			"bindings": "esm"
		}
	},
	"options": {
		"enable": ["simd"],
		"exportRuntime": true,
		"bindings": "esm"
	}
}
