{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "pkg", "target", "node_modules"]
}
